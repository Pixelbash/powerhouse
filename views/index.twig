{% extends "common/base.twig" %}

{% block body_classes %}page-index{% endblock %}

{% block content %}

<section class="hero">
  <div class="intro">
    <h1>
      {{ options.home_hero_text }}
    </h1>
  </div>
  <div class="slider">
    <div class="slideshow" data-sub="hero-slideshow">
      {% for i in 0..4 %}
        <div {% if loop.index0 > 0 %}style="display:none;"{% endif %}>
          <div class="background" style="background-image:url('http://placehold.it/1920x1080')"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}