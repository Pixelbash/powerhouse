{% extends "common/base.twig" %}

{% block body_classes %}page-index{% endblock %}

{% block content %}

<section class="hero">
  <div class="intro">
    <h1>
      {{ options.home_hero_text }}
    </h1>
  </div>
  <div class="slider">
    <div class="slideshow" data-sub="hero-slideshow">
      {% for slide in home_slides %}
        <div>
          <div class="background" style="background-image:url('{{ slide }}')"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}