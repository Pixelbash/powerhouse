{% include 'html-header.twig' %}
{% block head %}
{% endblock %}
</head>
<body class="{{ body_class }} {% block body_classes %}{% endblock %}">
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

    <header>
        {% block header %}
        {% endblock %}
        <nav class="nav-menu main-menu" role="main-menu">
            <ul>
                {% for item in main_menu.get_items %}
                    <li class="nav-main-item {{item.class}} {{item.current ? 'current-page'}}">
                        <a class="nav-main-link" href="{{item.get_path}}">{{item.title}}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </header>

    {% block content %}
    <section class="content-wrap {% block content_wrap_classes %}{% endblock %}">
        Sorry, no content
    </section>
    {% endblock %}

    {% include 'footer.twig' %}
    {{ function('wp_footer') }}
</body>
</html>
